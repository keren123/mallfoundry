<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mallfoundry.customer.infrastructure.persistence.mybatis.follow.FollowStoreMapper">

    <resultMap id="followStoreResultMap" type="com.mallfoundry.customer.domain.follow.FollowStore">
        <id property="customerId" column="customer_id_"/>
        <id property="storeId" column="store_id_"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO customer_follow_store ( customer_id_, store_id_ )
        VALUES (#{customerId}, #{storeId})
    </insert>

    <delete id="delete">
        DELETE
        FROM
            customer_follow_store
        WHERE
            customer_id_ = #{customerId} AND store_id_ = #{storeId}
    </delete>

    <select id="selectListByCustomerId" resultMap="followStoreResultMap">
        SELECT
           customer_id_,
           store_id_
        FROM
            customer_follow_store
        WHERE
            customer_id_ = #{customerId}
    </select>

    <select id="count" resultType="int">
        SELECT
           COUNT(*)
        FROM
            customer_follow_store
        WHERE
            customer_id_ = #{customerId} AND store_id_ = #{storeId}
    </select>

    <select id="countByCustomerId" resultType="int">
        SELECT
           COUNT(*)
        FROM
            customer_follow_store
        WHERE
            customer_id_ = #{customerId}
    </select>
</mapper>