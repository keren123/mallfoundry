<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mallfoundry.customer.infrastructure.persistence.mybatis.PurchaseOrderMapper">

    <resultMap id="purchaseOrderResultMap" type="com.mallfoundry.customer.domain.PurchaseOrder">
        <id property="id" column="id_"/>
        <result property="productId" column="product_id_"/>
        <result property="cart" column="cart_"/>
        <result property="quantity" column="quantity_"/>
        <result property="specs" column="specs_"
                typeHandler="com.mallfoundry.mybatis.type.IntListTypeHandler"/>
        <result property="createTime" column="create_time_"/>
    </resultMap>

    <insert id="insertOrder">
        INSERT INTO customer_purchase_order ( id_, product_id_, cart_, quantity_, specs_, create_time_ )
        VALUES
            (
            #{id}, #{productId}, #{cart}, #{quantity},
            #{specs, typeHandler=com.mallfoundry.mybatis.type.IntListTypeHandler},
            #{createTime})
    </insert>

    <update id="updateOrder">
        UPDATE
        customer_purchase_order
        <set>
            <if test="quantity != 0">
                quantity_ = #{quantity},
            </if>
            <if test="specs != null and specs.size() > 0">
                specs_ = #{specs},
            </if>
        </set>
        WHERE
        id_ = #{id}
    </update>

    <delete id="deleteOrderById">
        DELETE
        FROM
            customer_purchase_order
        WHERE
            id_ = #{id}
    </delete>

    <select id="selectListByCart" resultMap="purchaseOrderResultMap">
        SELECT
            id_,
            product_id_,
            cart_,
            quantity_,
            specs_,
            create_time_
        FROM
            customer_purchase_order
        WHERE
            cart_ = #{cart}
    </select>
</mapper>