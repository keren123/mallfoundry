<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.shop.topic.infrastructure.persistence.mybatis.TopicMapper">
    <resultMap id="topicResultMap" type="com.github.shop.topic.Topic">
        <id property="name" column="name_"/>
        <result property="type" column="type_"/>
        <result property="comments" column="comments_"/>
        <result property="createTime" column="create_time_"/>
    </resultMap>

    <select id="selectTopicByName" resultMap="topicResultMap">
        SELECT
            name_, type_, comments_, create_time_
        FROM
            basic_topic
        WHERE
            name_ = #{name}
    </select>

    <insert id="insertTopic">
        INSERT INTO
            basic_topic (name_, type_, comments_, create_time_)
        VALUES(#{name}, #{type}, #{comments}, #{createTime})
    </insert>

    <update id="updateTopic">
        UPDATE basic_topic
        SET comments_ = #{comments}
        WHERE
            name_ = #{name}
    </update>

    <delete id="deleteTopicByName">
        DELETE
        FROM
            basic_topic
        WHERE
            name_ = #{name}
    </delete>
</mapper>