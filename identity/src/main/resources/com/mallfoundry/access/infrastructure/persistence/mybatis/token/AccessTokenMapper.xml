<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mallfoundry.access.infrastructure.persistence.mybatis.token.AccessTokenMapper">

    <resultMap id="accessTokenResultMap" type="com.mallfoundry.access.domain.token.AccessToken">
        <id property="username" column="username_"/>
        <result property="token" column="token_"/>
        <result property="tokenType" column="token_type_"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO access_token ( username_, token_, token_type_ )
        VALUES ( #{username}, #{token}, #{type} )
    </insert>

    <delete id="deleteByUsername">
        DELETE
        FROM
            access_token
        WHERE
            username_ = #{username}
    </delete>

    <delete id="deleteByToken">
        DELETE
        FROM
            access_token
        WHERE
            token_ = #{token}
    </delete>

    <select id="selectByToken" resultMap="accessTokenResultMap">
        SELECT
            username_,
            token_,
            token_type_
        FROM
            access_token
        WHERE
            token_ = #{token}
    </select>

    <select id="selectByUsername" resultMap="accessTokenResultMap">
        SELECT
            username_,
            token_,
            token_type_
        FROM
            access_token
        WHERE
            username_ = #{username}
    </select>
</mapper>