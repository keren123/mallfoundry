<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mallfoundry.store.infrastructure.persistence.mybatis.StoreMapper">
    <resultMap id="storeInfoResultMap" type="com.mallfoundry.store.Store">
        <id property="id" column="id_"/>
        <result property="name" column="name_"/>
        <result property="logoUrl" column="logo_url_"/>
    </resultMap>

    <select id="selectById" resultMap="storeInfoResultMap">
        SELECT
            id_,
            name_,
            logo_url_
        FROM
            store_info
        WHERE
            id_ = #{id}
    </select>

    <insert id="insert">
        INSERT INTO
            store_info (id_, name_, logo_url_)
        VALUES (
            #{id},
	        #{name},
	        #{logoUrl}
	        )
    </insert>

    <update id="update">
        UPDATE store_info
        SET name_ = #{name},
        logo_url_ = #{logoUrl}
        WHERE
            id_ = #{id}
    </update>
</mapper>